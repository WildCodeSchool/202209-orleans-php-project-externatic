{% extends 'base.html.twig' %}

{% block body %}
	{% if error %}
		<div class="d-flex justify-content-center bg-danger text-light py-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<div class="d-flex justify-content-center mt-5">
		<form action="{{ path('app_login') }}" method="post" class="d-flex flex-column mt-5">

			<div class="d-flex flex-column justify-content-center align-items-center">
				<label for="username" class="align-self-start">Email :</label>
				<input type="text" id="username" name="_username" value="{{ last_username }}" class="w-100 form-control"/>

				<label for="password" class="mt-3 align-self-start">Mot de passe :</label>
				<input type="password" id="password" name="_password" class="form-control"/>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
				<input type="hidden" name="_target_path" value="{{ path('app_default_login') }}"/>
			</div>

			<div class="fs-5 mt-2">Pas encore inscrit ?<a class="text-decoration-none ms-4" href="{{ path('app_register') }}">S'inscrire</a>
			</div>
			<div class="d-flex justify-content-end align-items-baseline mt-3">
				<button type="submit" class="btn btn-primary">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-in-right me-2" viewbox="0 0 16 16">
						<path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z"/>
						<path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z"/>
					</svg>Connexion</button>
			</div>

		</form>
	</div>
{% endblock %}
