{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() ~ ' | Mes favories' }}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="d-flex justify-content-between">
			<h1>Administration des utilisateurs</h1>
			<div>
				<a class="btn btn-secondary btn-sm" href="{{ path('app_admin_new') }}">Ajouter</a>
			</div>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>Pr√©nom</th>
					<th>Nom</th>
					<th>Roles</th>
					<th>Email</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.firstname }}</td>
						<td>{{ user.lastname }}</td>

						{% for key, role in constant('App\\Controller\\AdminUserController::ROLES') %}
							{% if  user.roles[0] == key %}
								<td>{{ role }}</td>
							{% endif %}
						{% endfor %}

						<td>{{ user.email }}</td>
						<td>
							<div class="d-flex justify-content-between">
								<div>
									<a class="btn btn-outline-tertiary btn-sm" href="{{ path('app_admin_edit', {'id': user.id}) }}">Modifier</a>
								</div>
								{{ include('admin/_delete_form.html.twig') }}
							</div>
						</td>
					</tr>
				</tbody>
			</tbody>
		</tr>
	{% else %}
		<tr>
			<td colspan="10">Aucun utilisateur</td>
		</tr>
	{% endfor %}
</tbody></table></div>{% endblock %}
