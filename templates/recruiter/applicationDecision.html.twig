{% extends 'dashboard_layout.html.twig' %}

{% block title %}
  {{ parent() ~ ' | Candidatures' }}
{% endblock %}

{% block sideNav %}

{% endblock %}

{% block content %}
  <div class="container p-4">
    <h1>Donner suite à une candidature</h1>
    <div class="row justify-content-center g-4">
      {% include 'component/_card.html.twig' with { offer: application.offer } only %}
      <h2>Candidat</h2>
      {% include 'component/_card_candidate.html.twig' with { candidate: application.candidate } only %}
      {{ form(form) }}
      <div class="d-flex">
        <a aria-label="Retour à l'index" class="btn btn-outline-secondary d-flex align-items-center" href="{{ path('app_recruiter_application') }}">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left me-2" viewbox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
          </svg>
          <span class="d-none d-lg-block">Retour</span>
        </a>
      </div>
    </div>
  </div>
{% endblock %}
