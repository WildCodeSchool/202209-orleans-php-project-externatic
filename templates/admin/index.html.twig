{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() ~ ' | Mes favories' }}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="d-flex justify-content-between">
			<h1>Administration des utilisateurs</h1>
			<div>
				<a class="btn btn-secondary btn-sm" href="{{ path('app_admin_new') }}">Ajouter</a>
			</div>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>Prénom</th>
					<th>Nom</th>
					<th>Roles</th>
					<th>Téléphone</th>
					<th>Email</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.firstname }}</td>
						<td>{{ user.lastname }}</td>

						{% set rank = 0 %}
						{% for key, role in user.roles %}
							{% if role ==  "ROLE_ADMIN" and rank < 3 %}
								<td>{{ constant("App\\Controller\\AdminUserController::ROLES")["ROLE_ADMIN"] }}</td>
								{% set rank = 3 %}

							{% elseif role ==  "ROLE_RECRUITER" and rank < 2 %}
								<td>{{ constant("App\\Controller\\AdminUserController::ROLES")["ROLE_RECRUITER"] }}</td>
								{% set rank = 2 %}

							{% elseif role ==  "ROLE_CANDIDATE" and rank < 1 %}
								<td>{{ constant("App\\Controller\\AdminUserController::ROLES")["ROLE_CANDIDATE"] }}</td>
								{% set rank = 1 %}

							{% elseif rank == 0 %}
								<td>{{ constant("App\\Controller\\AdminUserController::ROLES")["ROLE_USER"] }}</td>

							{% endif %}
						{% endfor %}


						<td>{{ user.phoneNumber }}</td>
						<td>{{ user.email }}</td>
						<td>
							<div class="d-flex justify-content-between">
								<div>
									<a class="btn btn-outline-tertiary btn-sm" href="{{ path('app_admin_edit', {'id': user.id}) }}">Modifier</a>
								</div>
								{{ include('admin/_delete_form.html.twig') }}
							</div>
						</td>
					</tr>
				</tbody>
			</tbody>
		</tr>
	{% else %}
		<tr>
			<td colspan="10">Aucun utilisateur</td>
		</tr>
	{% endfor %}
</tbody></table></div>{% endblock %}
