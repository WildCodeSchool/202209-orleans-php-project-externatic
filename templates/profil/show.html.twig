{% extends "base.html.twig" %}

{% block navbar %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
	<div class="container my-5">

		<div class="d-flex justify-content-center mb-5">
		{% include "./svg/_logo.svg.twig" %}
		</div>

		<div class="row align-items-center box-shadow p-5 rounded g-3">
			<div class="col-lg-5 col-xl-4 d-flex justify-content-center align-items-center">
				<img class="profilPicture rounded-circle border m-4 border-secondary" src="{{ candidate.user.avatar is empty ? asset ('build/images/default_avatar.png') : vich_uploader_asset(app.candidate.user) }}" alt="Image de profil">
			</div>
			<div class="col-lg-7 col-xl-8">
				<div class="fs-4 fw-bold">{{ candidate.user.firstname }}
					{{ candidate.user.lastname }}</div>

				<div>{{ candidate.aboutMe }}</div>
			</div>
		</div>


		<div class="row box-shadow p-5 rounded my-3">

			<div class="col-xxl-4 my-3">
				<div class="h-100 bg-container-primary rounded p-3 d-flex flex-column">
					<div class="text-subtitle fw-bold mx-3 my-3">Contact</div>
					<div class="d-flex align-items-center gap-3 mx-3 my-3">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-envelope" viewbox="0 0 16 16">
							<path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"/>
						</svg>
						<div class="d-flex flex-column">
							<div>{{ candidate.postalCode }}{{ candidate.city }}</div>
							<div>{{ candidate.address }}</div>
						</div>
					</div>

					<div class="d-flex align-items-center gap-3 mx-3 my-3">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-at" viewbox="0 0 16 16">
							<path d="M13.106 7.222c0-2.967-2.249-5.032-5.482-5.032-3.35 0-5.646 2.318-5.646 5.702 0 3.493 2.235 5.708 5.762 5.708.862 0 1.689-.123 2.304-.335v-.862c-.43.199-1.354.328-2.29.328-2.926 0-4.813-1.88-4.813-4.798 0-2.844 1.921-4.881 4.594-4.881 2.735 0 4.608 1.688 4.608 4.156 0 1.682-.554 2.769-1.416 2.769-.492 0-.772-.28-.772-.76V5.206H8.923v.834h-.11c-.266-.595-.881-.964-1.6-.964-1.4 0-2.378 1.162-2.378 2.823 0 1.737.957 2.906 2.379 2.906.8 0 1.415-.39 1.709-1.087h.11c.081.67.703 1.148 1.503 1.148 1.572 0 2.57-1.415 2.57-3.643zm-7.177.704c0-1.197.54-1.907 1.456-1.907.93 0 1.524.738 1.524 1.907S8.308 9.84 7.371 9.84c-.895 0-1.442-.725-1.442-1.914z"/>
						</svg>
						<span>{{ candidate.user.email }}</span>
					</div>

					<div class="d-flex align-items-center gap-3 mx-3 my-3">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-telephone" viewbox="0 0 16 16">
							<path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"/>
						</svg>
						<span>{{ candidate.user.phoneNumber }}</span>
					</div>
				</div>
			</div>

			<div class="col-xxl-4 my-3">
				<div class="h-100 bg-container-primary rounded p-3 d-flex flex-column">
				<div class="text-subtitle fw-bold mx-3 my-3">Liens</div>
					<div class="p-2">
						<a class="nav-link" href="{{ candidate.github }}" aria-label="github">
