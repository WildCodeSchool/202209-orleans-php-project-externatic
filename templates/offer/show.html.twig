{% extends 'dashboard_layout.html.twig' %}

{% block title %}
	{{ parent() ~ ' | ' ~ offer.title }}
{% endblock %}

{% block content %}
	<div class="my-4 dashboard-content-gradient rounded">
		<h1 class="d-none">Offre</h1>
		<div class="container p-4">

			<div class="d-flex justify-content-between">
				<h2 class="w-75">{{ offer.title }}</h2>
				<div class="w-25 d-flex justify-content-end align-items-center">
					{% if offer.isImportant %}
						<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-star-fill text-secondary" viewbox="0 0 16 16">
							<path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
						</svg>
					{% else %}
                        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-star text-secondary" viewbox="0 0 16 16">
							<path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
						</svg>
					{% endif %}
				</div>
			</div>

			<div class="mt-4">
				<h2 class="font-subtitle fs-3">Ville</h2>
				<div>{{ offer.postalCode }}
					-
					{{ offer.city }}</div>
			</div>

			<div class="mt-4">
				<h2 class="font-subtitle fs-3">Dates clés</h2>
                <div><span>Crée le : </span>{{ offer.createdAt|date('d/m/Y') }}</div>
                <div><span>Pour le : </span>{{ offer.targetDate ? offer.targetDate|date('d/m/Y') : 'Non renseigné' }}</div>
			</div>

			<div class="mt-4">
				<h2 class="font-subtitle fs-3">Description</h2>
				<div>{{ offer.description }}</div>
			</div>

			<div class="mt-4">
				<h2 class="font-subtitle fs-3">Salaire</h2>
				<div>{{ offer.annualWage }}</div>
			</div>


			<div class="d-flex justify-content-between mt-5">
				<a aria-label="Retour à l'index" class="btn btn-outline-secondary d-flex align-items-center" href={{ path('app_offer_index') }}>
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class=" bi bi-arrow-left me-2" viewbox="0 0 16 16">
						<path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
					</svg>
					<span class="d-none d-lg-block">Retour</span>
				</a>
				<a aria-label="Modifier l'entreprise" class="btn btn-primary d-flex align-items-center" href={{ path('app_offer_edit', {'id': offer.id} ) }}>
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen me-2" viewbox="0 0 16 16">
						<path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
					</svg>
					<span class="d-none d-lg-block">Modifier</span>
				</a>
				<form class="d-flex align-items-center" method="post" action="{{ path('app_candidate_applyToJob', {candidate: app.user.candidate.id, offer: offer.id}) }}" onsubmit="return confirm('Confirmer la candidature ?');">
					<input type="hidden" name="token" value="{{ csrf_token('apply-offer') }}">
					<button class="btn btn-outline-primary">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen me-2" viewbox="0 0 16 16">
							<path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
						</svg>
						Candidater
					</button>
				</form>
			</div>
		</div>

		{{ include('offer/_delete_form.html.twig') }}
	</div>

{% endblock %}

