<div class="container mt-5">
	<div class="row">
		<div class="col-md-6">

			<div class="row justify-content-between align-items-center">

				<div class="d-flex justify-content-between align-items-center">
					<h1 class="font-title">Expériences professionnelles</h1>
				</div>
			</div>
			
			{% for experience in candidate.experiences %}
				<div class="d-flex flex-column">
					<div class="d-flex justify-content-between align-items-center mt-2">
						<h2 class="font-title m-0">{{ experience.jobTitle }}</h2>
						<a class="btn btn-primary btn-sm" href="{{ path('app_experience_edit', {'id': experience.id}) }}">Modifier</a>
					</div>
					<div class="row">
						<div class="row">
							<p class="font-subtitle experiencePeriode mb-2 col-lg-4">
								{{ (experience.startDate ? experience.startDate|date('d/m/Y') : '') ~ 
								' - ' ~ 
								(experience.isCurrentPosition ? 'Poste actuel' : (experience.endDate ? experience.endDate|date('d/m/Y') : '')) }}</p>

						</div>
					</div>
				</div>

				<div class="row mt-1">
					<div class="row">
						<p class="font-subtitle mb-1 col-lg-4">Entreprise</p>
						<p class="col-lg-8">{{ experience.company }}</p>
					</div>

					<hr>

					<div class="row mb-5">
						<p class="font-subtitle  mb-1 col-lg-4">Description du poste</p>
						<p class="col-lg-8">{{ experience.jobDescription|nl2br }}</p>
					</div>

				</div>
			{% else %}
				<div>
					<p>Aucune expérience</p>
				</div>
			{% endfor %}
		</div>
	</div>
</div>
