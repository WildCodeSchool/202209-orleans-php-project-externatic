{% extends 'dashboard_layout.html.twig' %}

{% block title %}
	{{ parent() ~ ' | Profil' }}
{% endblock %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-md-6">

					<div class="row justify-content-between align-items-center">
						<div class="col-md-1 text-center">
							<img class="profilPicture rounded-circle border my-3" src="{{ user.avatar is empty ? asset ('build/images/Placeholder-pp.png') : asset ('build/images/' ~ user.avatar ) }}" alt="Image de profil">
						</div>
						<div class="col-md-8 d-flex justify-content-between align-items-center">
							<h1 class="font-tilte">Mon profil</h1>
							<a class="btn btn-primary btn-sm" href="{{ path('app_candidate_edit', {'id': candidate.id}) }}">Modifier mon profil</a>
						</div>
					</div>
			


				<div class="row">
					<div class="col-sm-6">
						<div>
							<p class="font-title fw-bold m-1">Prénom</p>
							<p class="">{{ user.firstname }}</p>
						</div>

						<div>
							<p class="font-title fw-bold m-1">Nom</p>
							<p>{{ user.lastname }}</p>
						</div>

						<div>
							<p class="font-title fw-bold m-1">Nationalité</p>
							<p>{{ candidate.nationality|country_name }}</p>
						</div>

						<div>
							<p class="font-title fw-bold m-1">Addresse</p>
							<p>{{ candidate.address|nl2br }}</p>
						</div>

						<div class="d-flex">
							<div>
								<p class="font-title fw-bold m-1">Code postal</p>
								<p>{{ candidate.postalCode }}</p>
							</div>

							<div>
								<p class="font-title fw-bold m-1">Ville</p>
								<p>{{ candidate.city }}</p>
							</div>
						</div>

						<div>
							<p class="font-title fw-bold m-1">Centre d'intérêts</p>
							<p>{{ candidate.hobby }}</p>
						</div>
					</div>

					<div class="col-sm-6">
						<div>
							<p class="font-title fw-bold m-1">Email</p>
							<p>{{ user.email }}</p>
						</div>


						<div>
							<p class="font-title fw-bold m-1">Github</p>
							<p>{{ candidate.github }}</p>
						</div>

						<div>
							<p class="font-title fw-bold m-1">Linkedin</p>
							<p>{{ candidate.linkedin }}</p>
						</div>

						<div>
							<p class="font-title fw-bold m-1">Portfolio</p>
							<p>{{ candidate.portfolio }}</p>
						</div>
					</div>
				</div>


				<div>
					<p class="font-title fw-bold m-1">À propos de moi</p>
					<p>{{ candidate.aboutMe|nl2br }}</p>
				</div>

			</div>
		</div>
	</div>

{% include "experience/_index.html.twig" %}

{% endblock %}
