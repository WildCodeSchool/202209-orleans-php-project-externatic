{% extends 'dashboard_layout.html.twig' %}

{% block title %}
	{{ parent() ~ ' | Mes favories' }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('card') }}
{% endblock %}

{% block sideNav %}
	{% include './component/_sideBar_dashboard.html.twig' %}
{% endblock %}

{% block content %}
	<div class="container">
		<div class="d-flex justify-content-center align-items-center gap-3 p-5 rounded text-dark">
			<svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="currentColor" class="bi bi-bookmark-check-fill" viewbox="0 0 16 16">
				<path fill-rule="evenodd" d="M2 15.5V2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.74.439L8 13.069l-5.26 2.87A.5.5 0 0 1 2 15.5zm8.854-9.646a.5.5 0 0 0-.708-.708L7.5 7.793 6.354 6.646a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0l3-3z"/>
			</svg>
			<h1 class="font-title fs-1">Mes Favoris</h1>
		</div>
		<hr>
		<div class="row justify-content-center g-4">
			{% if app.user.candidate.favorite|length > 0  %}
			
			{% for offer in app.user.candidate.favorite	 %}
				<div class="col-lg-6">
					{% include "component/_card.html.twig" %}
				</div>
			{% endfor %}
			{% else %}
				<p class="mt-3 fs-5 text-center">
				{{ 'Aucune offre mise en favoris' }}
				</p>
			{% endif %}
		</div>
	</div>
{% endblock %}
