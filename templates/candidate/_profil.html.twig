<div class="d-flex justify-content-center align-items-center gap-3 p-5 rounded text-dark">
	<svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="currentColor" class="bi bi-person-circle" viewbox="0 0 16 16">
		<path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
		<path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
	</svg>
	<h1 class="font-title fs-1">Mon Profil</h1>
</div>
<hr/>

<div id="contact-main-info" class="row m-0 p-4 py-5 mt-5 rounded box-shadow">
	<div class="col-lg-5 col-xl-3 d-flex justify-content-center align-items-center">
		<img class="profilPicture rounded-circle border my-3" src="{{ app.user.avatar is empty ? asset('build/images/default_avatar.png') : vich_uploader_asset(app.user) }}" alt="Image de profil"/>
	</div>
	<div class="col-lg-7 col-xl-9">
		<div>
			<span class="fw-bold fs-4">
				{{ app.user.firstname }}
				{{ app.user.lastname }}
			</span>
		</div>
		<div class="d-flex gap-3">
			<span>{{ candidate.nationality|country_name }}</span>
		</div>

		<div class="d-flex gap-3">
			{% for skill in candidate.skills %}
				<span class="badge badge-pill bg-quaternary fs-6 fw-normal text-dark border">{{ skill.name }}</span>
			{% endfor %}
		</div>

		<div class="mt-4">
			<p class="fw-bold font-title mb-1">À propos de moi</p>
			<p>{{ candidate.aboutMe|nl2br }}</p>
		</div>
		<div class="mt-4">
			<p class="fw-bold font-title mb-1">Centre d'intérêts</p>
			<p>{{ candidate.hobby }}</p>
		</div>
		{% if (app.user.candidate.curriculumVitae is not empty) %}
			<a class="nav-link  text-dark" href="{{ asset('uploads/files/cv/' ~ app.user.candidate.curriculumVitae) }}" target="_blank" aria-label="Mon CV">
			<span class="fw-bold font-title mb-1"><i class="bi bi-file-earmark-person me-1"></i>Voir mon Curriculum Vitae</span>
				
			</a>
		{% endif %}
	</div>
</div>

