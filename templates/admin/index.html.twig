{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() ~ ' | Mes favories' }}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="d-flex justify-content-between">
			<h1>Administration des utilisateurs</h1>
			<div>
				<a class="btn btn-secondary btn-sm" href="{{ path('app_admin_new') }}">Ajouter</a>
			</div>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>Prénom</th>
					<th>Nom</th>
					<th>Roles</th>
					<th>Téléphone</th>
					<th>Email</th>
					<th>Dernière modification</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.firstname }}</td>
						<td>{{ user.lastname }}</td>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						<td>{{ user.phoneNumber }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.updatedAt ? user.updatedAt|date('d/m/Y H:i') : '' }}</td>
						<td>
							<div class="d-flex justify-content-between">
								<div>
									<a class="btn btn-outline-tertiary btn-sm" href="{{ path('app_admin_edit', {'id': user.id}) }}">Modifier</a>
								</div>
								{{ include('admin/_delete_form.html.twig') }}
							</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="10">Aucun utilisateur</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>


	</div>
{% endblock %}
