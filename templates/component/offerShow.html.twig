<div class="d-flex flex-column align-items-center justify-content-center p-4">
	<div>
		{% if offer.isImportant and is_granted('ROLE_RECRUITER') %}
			<span class="badge badge-pill bg-danger fw-normal fs-5 me-3">Important</span>
		{% endif %}
	</div>
	<h2>{{ offer.title }}</h2>
	<div class="d-flex justify-content-center">
		<div class="mt-4 d-flex align-items-center">
			<span>
				{% include "svg/_localisation.svg.twig" %}
			</span>
			<span class="fs-5">{{ offer.postalCode }}
				-
				{{ offer.city }}</span>
		</div>
	</div>
</div>
<hr>

<div class="mt-4">
	<div>{{ offer.description }}</div>
</div>

<div class="mt-4">
	<h2 class="font-subtitle fs-5">Rémunération</h2>
	<div>{{ offer.annualWage ~ '€ / an' }}</div>
</div>

<div class="mt-4 blockquote-footer">
	<div>
		<span>Le :
		</span>
		{{ offer.createdAt|date('d/m/Y') }}</div>
	<div>
		<span>Pour le :
		</span>
		{{ offer.targetDate ? offer.targetDate|date('d/m/Y') : 'Non renseigné' }}</div>
</div>
