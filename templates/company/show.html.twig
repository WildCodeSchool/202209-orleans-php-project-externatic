{% extends 'base.html.twig' %}

{% block title %}{{ parent() ~ ' | ' ~ company.name }}{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('card') }}
{% endblock %}

{% block navbar %}
    {% include './component/_navigation_bar.html.twig' %}
{% endblock %}

{% block body %}
<div class="container p-4">
    <div>
        <h1 class="font-title fw-bold fs-2 mt-4 mb-0">{{ company.name }}</h1>
        <div>{{ company.email }}</div>
    </div>
    <div class="mt-4">
        <h2 class="font-subtitle fs-3">Adresse</h2>
        <span>{{ company.postalCode }}</span>
        <span>{{ company.city }}</span>
    </div>
   
    <div class="mt-4">
        <h2 class="font-subtitle fs-3">Présentation</h2>
        <div>{{ company.description }}</div>
    </div>


    
        <div class="mt-4">
            <h2 class="font-subtitle fs-3">Les offres de cette entreprise</h2>
            {% if company.offers is not empty %}

                <div class="p-2"> 
                    <div class="row g-4">
                        {% for offer in company.offers %}
                            {% include "component/_card.html.twig" %}
                        {% endfor %}
                    </div>
                </div>
            {% else %}
                <div>Cette entreprise n'a pas d'offre en cours !
                    <a href="" class="btn btn-secondary mx-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                        </svg>
                        <span>Crée une offre</span>
                    </a>
                </div>
            {% endif %}
        </div>

        <div class="d-flex justify-content-between mt-5">
            <a aria-label="Retour à l'index" class="btn btn-outline-secondary d-flex align-items-center" href={{ path('app_company_index') }}>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class=" bi bi-arrow-left me-2" viewbox="0 0 16 16">
                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
                </svg>
                <span class="d-none d-lg-block">Retour</span>
            </a>
            <a aria-label="Modifier l'entreprise" class="btn btn-primary d-flex align-items-center" href={{ path('app_company_edit', {'id': company.id}) }}>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen me-2" viewBox="0 0 16 16">
                    <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
                </svg>
                <span class="d-none d-lg-block">Modifier</span>
            </a>
        </div>
</div>



{% endblock %}
