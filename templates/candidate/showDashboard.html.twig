{% extends 'dashboard_layout.html.twig' %}

{% block title %}
	{{ parent() ~ ' | Mon tableau de bord' }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('card') }}
{% endblock %}

{% block sideNav %}
	{% include './component/_sideBar_dashboard.html.twig' %}
{% endblock %}

{% block content %}

	<div class="container">
		<h1>Mon tableau de bord</h1>

		<div class="row my-3">
			<div class="col">
				<a class="py-2 h-100  text-decoration-none" href="{{ path('app_candidate_show_favories') }}">
					<div  class="text-center bg-secondary text-light rounded box-shadow p-4">
						<div class="display-2 text-subtitle fw-bolder ">{{ numberOfFavorite }}</div>
						<div class="fs-5">Nombre de favoris</div>
					</div>
				</a>
			</div>
		</div>


		<div class="row my-3">
			<div class="col-md-6">
				<a class="py-2  h-100 text-decoration-none" href="{{ path('app_candidate_show_offers_applied') }}">
					<div  class="d-flex flex-column justify-content-center align-items-center h-100 bg-secondary text-light rounded box-shadow p-4">
						<div class="display-2 text-subtitle fw-bolder ">{{ numberOfApplication }}</div>
						<div class="fs-5">Nombre de candidatures</div>
					</div>
				</a>
			</div>

			<div class="col-md-6">
				<a class="py-2  h-100 text-decoration-none" href="{{ path('app_candidate_show_offers_applied') }}">
					<div  class="d-flex flex-column justify-content-center align-items-center h-100 bg-secondary text-light rounded box-shadow p-4">
						<div class="display-2 text-subtitle fw-bolder ">{{ numberOfAppValidate }}</div>
						<div class="fs-5">Nombre de candidature accept√©e</div>
					</div>
				</a>
			</div>
		</div>


		<div class="row">
			<div class="col">
				<a class="py-2 text-decoration-none" href="{{ path('app_candidate_show') }}">
					<div  class="text-center bg-secondary text-light rounded box-shadow p-4">
						<div class="pt-3 px-5 mx-5">
							<div class="progress mt-3" style="height:40px;">
								<div class="progress-bar bg-container-secondary text-light fs-4" role="progressbar" aria-valuenow="{{ completionProfil }}" aria-valuemin="0" aria-valuemax="100" style="width:{{ completionProfil }}%;
																">{{ completionProfil }}
									%</div>
							</div>
						</div>
						<div class="fs-5 my-3">Avancement du profil</div>
					</div>
				</a>
			</div>
		</div>


	</div>

{% endblock %}
