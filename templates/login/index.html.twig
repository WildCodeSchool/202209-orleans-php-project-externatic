{% extends 'base.html.twig' %}

{% block body %}
	{% if error %}
		<div class="d-flex justify-content-center bg-danger text-light py-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<form action="{{ path('app_login') }}" method="post" class="d-flex flex-column justify-content-center align-items-center mt-5">
		<div class="d-flex flex-column justify-content-center align-items-center w-25">
			<label for="username" class="align-self-start">Email :
			</label>
			<input type="text" id="username" name="_username" value="{{ last_username }}" class="w-100">

			<label for="password" class="mt-3 align-self-start">Mot de passe :
			</label>
			<input type="password" id="password" name="_password" class="w-100">

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<input type="hidden" name="_target_path" value="{{ path('app_default_login') }}"/>
			<button type="submit" class="btn btn-primary mt-3 align-self-end">Connexion
			</button>
		</div>
	</form>
{% endblock %}
