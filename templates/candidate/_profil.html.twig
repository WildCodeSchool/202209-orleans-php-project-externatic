<div class="row justify-content-between align-items-center">
	<div class="col-md-1 text-center">
		<img class="profilPicture rounded-circle border my-3" src="{{ user.avatar is empty ? asset ('build/images/default_avatar.png') : vich_uploader_asset(user) }}" alt="Image de profil">
	</div>
	<div class="col-md-8 d-flex justify-content-between align-items-center">
		<h1 class="font-title title-profil display-5">Profil</h1>
		<a class="btn btn-outline-primary btn-sm" href="{{ path('app_candidate_edit', {'id': candidate.id}) }}">
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewbox="0 0 16 16">
				<path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
			</svg>
			<span class="d-none d-md-inline ms-2">Modifier</span>
		</a>
	</div>
</div>

<div class="row">
	<dl class="row mb-1">
		<dt class="font-title mb-1 col-lg-4  ">Prénom</dt>
		<dd class="col-lg-8">{{ user.firstname }}</dd>
	</dl>
	<dl class="row ">
		<dt class="font-title mb-1 col-lg-4 ">Nom</dt>
		<dd class="col-lg-8">{{ user.lastname }}</dd>
	</dl>
	<dl class="row">
		<dt class="font-title mb-1 col-lg-4 ">Nationalité</dt>
		<dd class="col-lg-8">{{ candidate.nationality|country_name }}</dd>
	</dl>

	<hr>

	<dl class="row">
		<dt class="font-title mb-1 col-lg-4 ">Addresse</dt>
		<dd class="col-lg-8">{{ candidate.address|nl2br }}</dd>
	</dl>
	<dl class="row">
		<dt class="font-title mb-1 col-lg-4 ">Code postal</dt>
		<dd class="col-lg-8">{{ candidate.postalCode }}</dd>
	</dl>
	<dl class="row">
		<dt class="font-title mb-1 col-lg-4 ">Ville</dt>
		<dd class="col-lg-8">{{ candidate.city }}</dd>
	</dl>
	<dl class="row">
		<dt class="font-title mb-1 col-lg-4 ">Email</dt>
		<dd class="col-lg-8">{{ user.email }}</dd>
	</dl>

	<hr>

	<dl class="row">
		<dt class="font-title  mb-1 col-lg-4 ">Réseaux sociaux</dt>
		<div class="col-lg-8 mb-3">
			<div class="d-flex gap-3 ">
				<a aria-label="github" class="nav-link" href="{{ candidate.github }}">
					<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-github" viewbox="0 0 16 16">
