{% extends 'dashboard_layout.html.twig' %}

{% block title %}
	{{ parent() ~ " | Entreprises" }}
{% endblock %}

{% block content %}
	<div class="d-flex align-items-center justify-content-center gap-4 my-3">
		<svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
			<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5H21m-3.75 3.75h.008v.008h-.008v-.008zm0 3h.008v.008h-.008v-.008zm0 3h.008v.008h-.008v-.008z"/>
		</svg>

		<h1 class="fs-1 text-title">Entreprises</h1>
	</div>
	<hr>
	<div class="d-flex justify-content-between align-items-center mt-5">
		<h2>Toutes les entreprises</h2>
		<a class="btn btn-outline-primary" href="{{ path('app_company_new') }}" aria-label="ajouter une entreprise">
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewbox="0 0 16 16">
				<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
			</svg>
			<span>Ajouter une entreprise</span>
		</a>
	</div>
	<div class="mt-3 mx-2">
		<table class="table">
			<thead>
				<tr>
					<th>Name</th>
					<th>Adresse</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				{% for company in companies %}
					<tr>
						<td>{{ company.name }}</td>
						<td>{{ company.postalCode }}
							{{ company.city }}</td>
						<td>
							<div class="d-flex align-items-center">
								<a class="btn btn-outline-secondary btn-sm mx-1" href="{{ path('app_company_show', {'id': company.id}) }}">
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewbox="0 0 16 16">
										<path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
										<path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
									</svg>
									<span class="ms-1">Voir</span>
								</a>
								<a class="btn btn-outline-primary btn-sm mx-1" href="{{ path('app_company_edit', {'id': company.id}) }}">
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewbox="0 0 16 16">
										<path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
									</svg>
									<span class="ms-1">Modifier</span>
								</a>
								{{ include('company/_delete_form.html.twig') }}
							</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">Pas d'entreprise trouv√©e</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
