<div class="d-flex justify-content-center align-items-center mt-5 mb-3 p-4 rounded bg-container-secondary text-light box-shadow">
	<h3 class="font-title title-profil fs-4">Expériences professionnelles</h3>
</div>

<div class="d-flex justify-content-center my-3">
	<a class="btn btn-sm btn-outline-container-secondary d-flex align-items-center" href="{{ path('app_experience_new', {'id': app.user.candidate.id }) }}">
		<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus" viewbox="0 0 16 16">
			<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
		</svg>
		<span>Ajouter une expérience</span>
	</a>
</div>

{% for experience in app.user.candidate.experiences %}
	<div class="rounded box-shadow p-5">

		{% include './component/_experienceSection.html.twig' %}
		
		<div class="d-flex justify-content-center align-items-center mt-4">
			<a class="btn btn-outline-tertiary btn-sm ms-2 align-items-center" href="{{ path('app_experience_edit', {'id': experience.id}) }}">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewbox="0 0 16 16">
					<path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
				</svg>
				<span class="ms-2">Modifier</span>
			</a>
			{{ include('experience/_delete_form.html.twig') }}
		</div>

	</div>

{% else %}
	<div>
		<p>Aucune expérience professionnelle enregistrée...</p>
	</div>
{% endfor %}
