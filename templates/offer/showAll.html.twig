{% extends 'dashboard_layout.html.twig' %}

{% block title %}
	{{ parent() ~ 'Toutes les Offres' }}
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('card') }}
{% endblock %}
{% block content %}
	<div class="container p-4">
		<div class="d-flex justify-content-between align-items-center py-2">
			<h1 class="w-75">Toutes les Offres</h1>
			{% if is_granted("ROLE_RECRUITER") %}
			<div class="w-25">
				<div class="d-flex justify-content-end">
					<a aria-label="Ajouter une offre" class="btn btn-outline-primary btn-sm" href="{{ path('app_offer_new') }}">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus" viewbox="0 0 16 16">
							<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
						</svg>
						<span class="ms-2 fs-6">Ajouter <span class="d-none d-sm-inline">une offre</span></span>
					</a>
				</div>
			</div>
			{% endif %}
		</div>
		<div class="row justify-content-center g-4">
			{% for offer in offers %}
				{% include "component/_card.html.twig" with {offer:offer} only %}
			{% endfor %}
		</div>
	</div>
{% endblock %}
