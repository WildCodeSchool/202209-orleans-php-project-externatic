<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}"/>
		<title>
			{% block title %}Externatic
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			{{ encore_entry_link_tags('dashboard') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		{% block navbar %}
			{% include './component/_navigation_bar.html.twig' %}
		{% endblock %}
			{% include "_flashes.html.twig" %}
		<main class="p-4 container-xxl">

			<div class="row">
				{% block body %}
					<div class="col-3 dashboard-nav dashboard-side-gradient rounded">
					{% block sideNav %}{% endblock %}
					</div>
					<div class="col-9 dashboard-content my-3 rounded">
					{% block content %}{% endblock %}
					</div>
				
				{% endblock %}
			</div>

		</main>
		
	</body>
</html>
