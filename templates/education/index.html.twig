{% extends 'base.html.twig' %}

{% block title %}Education index{% endblock %}

{% block body %}
    <h1>Education index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>School</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>Description</th>
                <th>Title</th>
                <th>Level</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for education in education %}
            <tr>
                <td>{{ education.id }}</td>
                <td>{{ education.school }}</td>
                <td>{{ education.startDate ? education.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ education.endDate ? education.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ education.description }}</td>
                <td>{{ education.title }}</td>
                <td>{{ education.level }}</td>
                <td>
                    <a href="{{ path('app_education_show', {'id': education.id}) }}">show</a>
                    <a href="{{ path('app_education_edit', {'id': education.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_education_new') }}">Create new</a>
{% endblock %}
