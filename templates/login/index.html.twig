{% extends 'base.html.twig' %}

{% block body %}
	{% if error %}
		<div class="d-flex justify-content-center bg-danger text-light py-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<div class="d-flex justify-content-center mt-5">
		<form action="{{ path('app_login') }}" method="post" class="d-flex flex-column mt-5">

			<div class="d-flex flex-column justify-content-center align-items-center">
				<label for="username" class="align-self-start">Email :</label>
				<input type="text" id="username" name="_username" value="{{ last_username }}" class="w-100 form-control"/>

				<label for="password" class="mt-3 align-self-start">Mot de passe :</label>
				<input type="password" id="password" name="_password" class="form-control"/>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
				<input type="hidden" name="_target_path" value="{{ path('app_default_login') }}"/>
			</div>

			<div class="fs-5 mt-2">Pas encore inscrit ?<a class="text-decoration-none ms-4" href="{{ path('app_register') }}">S'inscrire</a>
			</div>
			<div class="d-flex justify-content-end align-items-baseline mt-3">
				<button type="submit" class="btn btn-primary">Connexion</button>
			</div>

		</form>
	</div>
{% endblock %}
