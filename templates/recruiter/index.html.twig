{% extends 'dashboard_layout.html.twig' %}

{% block title %}
  {{ parent() ~ ' | Candidatures' }}
{% endblock %}

{% block sideNav %}

{% endblock %}

{% block content %}
  <div class="container p-4">
    <h1>Toutes les Offres</h1>
    <div class="row justify-content-center g-4">
      {% for offer in offers %}
        {% if offer.candidates is not empty %}
          <h2>Offre : {{ offer.id }}</h2>
            {% include 'component/_card.html.twig' with { offer: offer } only %}
            <h3>Candidat(s)</h3>
          {% for candidate in offer.candidates %}
            {% include 'component/_card_candidate.html.twig' with { candidate: candidate } only %}
          {% endfor %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
{% endblock %}
